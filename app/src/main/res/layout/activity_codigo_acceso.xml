<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/codigo_acceso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".codigo_acceso"
    android:orientation="vertical"
    android:background="#EFE9F4"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize"
    android:backgroundTint="#EFE9F4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Código de acceso"
        android:textAlignment="center"
        android:paddingTop="25dp"
        android:textColor="#001B2E"
        android:textStyle="bold"
        android:fontFamily="@font/palatino_linotype"/>


    <ImageView
        android:id="@+id/ivQR"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#EFE9F4"
        android:src="@drawable/vexel_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Tiempo restante:"
        android:textAlignment="center"
        android:textColor="#001B2E"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="#001B2E"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"/>

    <Button
        android:id="@+id/btnGenerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Generar nuevo código"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#001B2E"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00000000"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#001B2E"
        app:cornerRadius="10dp"/>

</LinearLayout>