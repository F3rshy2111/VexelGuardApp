<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EFE9F4"
    android:fitsSystemWindows="true"
    android:paddingTop="?attr/actionBarSize"
    android:backgroundTint="#EFE9F4">

    <ImageView
        android:id="@+id/ipnLogo"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:src="@drawable/ipnlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/nombreIPN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/palatino_linotype"
        android:gravity="center"
        android:text="INSTITUTO POLITÉCNICO NACIONAL"
        android:textColor="#001B2E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ipnLogo"
        app:layout_constraintRight_toLeftOf="@+id/ipnLogo"/>

    <RelativeLayout
        android:id="@+id/rl_ipn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="@id/nombreIPN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreIPN"
        app:layout_constraintVertical_bias="0.0"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/simbolo_menos" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ipn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="@id/rl_ipn"
        app:layout_constraintRight_toLeftOf="@id/rl_ipn2"
        app:layout_constraintTop_toBottomOf="@+id/rl_ipn"
        app:layout_constraintVertical_bias="0.0"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/simbolo_menos_guinda" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ipn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="@id/rl_ipn2"
        app:layout_constraintRight_toLeftOf="@id/rl_ipn2"
        app:layout_constraintTop_toBottomOf="@+id/rl_ipn2"
        app:layout_constraintVertical_bias="0.0"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/simbolo_menos" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ipn4"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toEndOf="@+id/ipnLogo"
        app:layout_constraintStart_toStartOf="@id/ipnLogo"
        app:layout_constraintTop_toBottomOf="@+id/ipnLogo"
        >

        <ImageView
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/simbolo_menos_vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ipn5"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toEndOf="@+id/rl_ipn4"
        app:layout_constraintStart_toStartOf="@id/rl_ipn4"
        app:layout_constraintTop_toBottomOf="@+id/ipnLogo"
        >

        <ImageView
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/simbolo_menos_guinda_vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ipn6"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toEndOf="@+id/rl_ipn5"
        app:layout_constraintStart_toStartOf="@id/rl_ipn5"
        app:layout_constraintTop_toBottomOf="@+id/ipnLogo"
        >

        <ImageView
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/simbolo_menos_vertical" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="@id/rl_ipn2"
        app:layout_constraintRight_toLeftOf="@id/rl_ipn2"
        app:layout_constraintTop_toBottomOf="@+id/rl_ipn2"
        app:layout_constraintVertical_bias="0.0"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="UNIDAD PROFESIONAL INTERDISCIPLINARIA EN INGENIERÍA Y TECNOLOGÍAS AVANZADAS"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#001B2E"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_lay2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toEndOf="@id/rl_ipn6"
        app:layout_constraintRight_toLeftOf="@id/rl_ipn6"
        app:layout_constraintTop_toBottomOf="@+id/lin_lay"
        app:layout_constraintVertical_bias="0.0"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="PROYECTO TERMINAL 2"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="“Sistema de control de acceso a áreas restringidas mediante reconocimiento facial y generación de códigos OTP”"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="que para obtener el grado de:"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="“Ingeniero en Telemática”"
            android:textStyle="bold"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Presentan:"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:text="Castillo Lara Rodrigo"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:text="Mejía Pérez Fernando"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Asesores:"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:text="Dr. Mata Rivera Miguel Félix"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:text="Dra. Villordo Jiménez Iclia"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:text="Dr. Huerta Trujillo Iliac"
            android:fontFamily="@font/palatino_linotype"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#001B2E"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/upiitaLogo"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:src="@drawable/logoupiita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_ipn4"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>