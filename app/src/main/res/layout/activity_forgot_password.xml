<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/vexel"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Olvidé mi contraseña"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:fontFamily="@font/palatino_linotype"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/forPassword_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Correo electrónico"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner_login"
            android:padding="18dp"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/email_icon"
            />

        <Button
            android:id="@+id/send_email_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:padding="18dp"
            android:text="Enviar correo"
            android:textAllCaps="false"
            android:textColor="#001B2E"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            />

        <Button
            android:id="@+id/login_return_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginTop="150dp"
            android:text="Inicio de sesión"
            android:textAllCaps="false"
            android:textStyle="italic"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#00000000"
            android:textColor="#001B2E"
            />

    </LinearLayout>

</RelativeLayout>